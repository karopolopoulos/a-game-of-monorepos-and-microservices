{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
